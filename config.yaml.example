# AI Provider Configuration
provider:
  name: "deepseek"  # Provider name (e.g., deepseek, openai, anthropic)
  # Recommended models:
  # - For DeepSeek: "deepseek-chat", "deepseek-coder", "deepseek-ai/DeepSeek-V3"
  # - For OpenAI: "gpt-4", "gpt-3.5-turbo"
  # - For Anthropic: "claude-3-opus", "claude-3-sonnet"
  model: "deepseek-chat"  # Model name
  # API key will be loaded from environment variable specified in .env file

# Commit Message Configuration
commit:
  types:
    - feat     # New feature
    - fix      # Bug fix
    - docs     # Documentation only changes
    - style    # Changes that do not affect the meaning of the code
    - refactor # Code change that neither fixes a bug nor adds a feature
    - test     # Adding missing tests or correcting existing tests
    - chore    # Changes to the build process or auxiliary tools
  max_header_length: 72
  max_body_length: 100

# PR Configuration
pr:
  template:
    title_format: "{type}({scope}): {description}"
    sections:
      - "Description"
      - "Changes"
      - "Testing"
      - "Additional Notes"

# Troubleshooting:
# - If you encounter JSON deserialization errors, try using a different model
# - Some models may require specific API base URLs or additional configuration
# - Make sure your API key has the necessary permissions for the model you're using 